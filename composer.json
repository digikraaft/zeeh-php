{
    "name": "digikraaft/zeeh-php",
    "description": "PHP Implementation of Zeeh API",
    "keywords": [
        "digikraaft",
        "zeeh-php",
        "Zeeh"
    ],
    "homepage": "https://github.com/digikraaft/zeeh-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Oladoyinbo",
            "email": "hello@digikraaft.ng",
            "homepage": "https://digikraaft.ng",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1 | ^8.2",
        "guzzlehttp/guzzle": "^7.7",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^10.3"
    },
    "autoload": {
        "psr-4": {
            "Digikraaft\\Zeeh\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Digikraaft\\Zeeh\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
